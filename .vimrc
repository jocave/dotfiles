
set nocompatible

set backspace=2

" enable syntax highlighting
syn on

"determines how many spaces your tabs shift text on your screen
"set tabstop=4

" copies the indent from the previous line when you insert a new line
" below it
set autoindent

" makes Vim show you line numbers on the left
set relativenumber
set number

" highlight current line
set cursorline

" use only spaces instead of tab characters when you hit <tab>
set expandtab
set softtabstop=2

" the number of spaces to insert for an indent
set shiftwidth=2

" set the colors scheme to start with
" colorscheme zenburn
" colorscheme evening
" colorscheme desert
colorscheme darkburn

" use full colors
set t_Co=256

" use windows style key bindings
" source $VIMRUNTIME/mswin.vim
" behave mswin

